datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}


model Menu {
  id        Int     @id @default(autoincrement())
  name      String
  price     Float
  category  String
  createdAt DateTime @default(now())
}

model Order {
  id          Int      @id @default(autoincrement())
  name        String   
  tableNumber String   
  totalPrice  Float    
  createdAt   DateTime @default(now()) 
  items       Json     
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
